{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"files": {
		"ignore": ["node_modules", ".expo"]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"security": {
				"noDangerouslySetInnerHtml": "off"
			},
			"recommended": true,
			"a11y": {
				"useValidAnchor": "warn"
			},
			"correctness": {
				"useExhaustiveDependencies": "off",
				"noConstantCondition": "off",
				"noSwitchDeclarations": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"useTemplate": "warn"
			}
		}
	}
}
